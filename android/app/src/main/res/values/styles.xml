<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
    </style>

<style name="AppTheme.NoNavBar" parent="Theme.AppCompat.DayNight.NoActionBar">
    <!-- Oculta ActionBar (opcional) -->
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>

    <!-- Hace transparente la barra de navegación -->
    <item name="android:navigationBarColor">@android:color/transparent</item>
    
    <!-- Evita el fondo contrastante en Android 10+ -->
    <item name="android:enforceNavigationBarContrast">false</item>
    
    <!-- Permite que el contenido se extienda detrás de la barra -->
    <item name="android:windowTranslucentNavigation">true</item>
</style>


    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
    </style>
</resources>